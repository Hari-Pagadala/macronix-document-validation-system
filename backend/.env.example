# Server Configuration
PORT=5000
NODE_ENV=development

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=postgres
DB_USER=postgres
DB_PASSWORD=your_db_password
DB_DIALECT=postgres
DB_LOGGING=false
# Optional: single URL form if used elsewhere
DATABASE_URL=postgresql://username:password@localhost:5432/database_name

# JWT Configuration
JWT_SECRET=replace_with_a_long_random_secret

# Frontend URL
FRONTEND_URL=http://localhost:3000

# ImageKit Configuration (for file uploads)
IMAGEKIT_ENDPOINT=https://ik.imagekit.io/your_imagekit_id
IMAGEKIT_PUBLIC_KEY=your_imagekit_public_key
IMAGEKIT_PRIVATE_KEY=your_imagekit_private_key

# Email Configuration (SMTP using Nodemailer)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-gmail-app-password
EMAIL_FROM=Macronix Verification <noreply@macronix.com>

# SMS Configuration (Fast2SMS)
FAST2SMS_API_KEY=your-fast2sms-api-key-here
FAST2SMS_SENDER_ID=MACRNX
